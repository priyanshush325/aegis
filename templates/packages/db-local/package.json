{
  "name": "@{{orgName}}/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts"
  },
  "scripts": {
    "db:generate": "dotenvx run --env-file=../../.env -- drizzle-kit generate:pg",
    "db:migrate": "dotenvx run --env-file=../../.env -- tsx src/migrate.ts",
    "db:push": "dotenvx run --env-file=../../.env -- drizzle-kit push",
    "db:studio": "dotenvx run --env-file=../../.env -- drizzle-kit studio",
    "db:introspect": "dotenvx run --env-file=../../.env -- drizzle-kit introspect:pg"
  },
  "dependencies": {
    "drizzle-orm": "^0.30.0",
    "postgres": "^3.4.0",
    "pg": "^8.11.0",
    "next-auth": "^5.0.0-beta.25"
  },
  "devDependencies": {
    "drizzle-kit": "^0.20.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0"
  }
}
