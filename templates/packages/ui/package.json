{
  "name": "@{{orgName}}/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./components/*": "./src/components/*.tsx",
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css",
    "dev": "chokidar 'src/**/*.{ts,tsx}' -c '{{packageManager}} build' --initial",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4",
    "@tailwindcss/postcss": "^4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chokidar-cli": "^3.0.0",
    "react": "19.1.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "next": "^14.0.0 || ^15.0.0"
  }
}
